<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF2F3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <!-- Cancel Button -->
        <TextView
            android:id="@+id/timelineCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Done Button -->
        <TextView
            android:id="@+id/timelineDoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <!-- Event Title -->
        <TextView
            android:id="@+id/timelineTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_below="@id/timelineCancelButton"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"/>

        <!-- Title Input Field -->
        <EditText
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_border"
            android:hint="Event Title*"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:layout_below="@id/timelineTitle"
            android:layout_marginTop="12dp"/>

        <!-- Time Input Field (with time picker) -->
        <TextView
            android:id="@+id/eventTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_border"
            android:padding="12dp"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textColorHint="@color/grey"
            android:layout_below="@id/eventTitle"
            android:layout_marginTop="12dp"
            android:text="Select Time"
            android:clickable="true"
            android:focusable="true"/>

    </RelativeLayout>
</FrameLayout>
