<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterDate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flower" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@drawable/blurred_background">

            <!-- Wedding Date Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carattere"
                android:paddingBottom="8dp"
                android:layout_marginTop="25dp"
                android:text="Add your wedding date to see\nhow many days are left until your day"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAlignment="center" />

            <!-- Wedding Date Input Field as a line with rounded corners and border -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wedding Date"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#EDABAD"
                app:boxBackgroundColor="#33EDABAD"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:hintTextAppearance="@style/BoldHintText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weddingDateInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#33EDABAD"
                android:textColor="#000000"
                    android:padding="16dp"
                    android:textSize="18sp"
                android:focusable="false"
                android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Next Button -->
            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#EDABAD"
                android:gravity="center"
                android:text="Next"
                android:elevation="10dp"
                android:layout_marginBottom="150dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:padding="10dp" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
