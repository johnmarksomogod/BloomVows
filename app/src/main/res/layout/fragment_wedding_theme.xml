<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAF2F3">

    <!-- Top Section with Back Button, Title, and Floating Add Event Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/WeddingThemeBackbttn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/back_icon"
            android:contentDescription="Back Button" />

        <!-- Wedding Theme Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/carattere"
            android:text="Wedding Theme "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <!-- Floating Button to Customize Wedding Theme -->
        <LinearLayout
            android:id="@+id/Customizebttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="20dp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Add Category Icon"
                android:src="@drawable/plus1" />
        </LinearLayout>

        <!-- Separator Line Below the Title -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="130dp"
            android:background="#EDABAD"
            android:foregroundGravity="center" />

    </RelativeLayout>

    <!-- ScrollView for Wedding Theme Content -->
    <ScrollView
        android:id="@+id/WeddingThemescrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Customized Wedding Theme Section -->
            <LinearLayout
                android:id="@+id/customizedWeddingThemeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sansita2"
                    android:text="My Wedding Theme"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <!-- Category Card for Customized Theme -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/customizeWeddingThemeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/customizedThemeImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rustic"
                            android:contentDescription="Customized Theme Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_image" />

                        <TextView
                            android:id="@+id/customizedThemeName"
                            android:text="Your Custom Theme"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/customizedThemeDescription"
                            android:text="Your personalized wedding theme will appear here after customization."
                            android:textSize="14sp"
                            android:textColor="#555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"/>

                        <!-- Color Palette Display -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color Palette"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:id="@+id/customizedThemeColorPalette"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                            <!-- Color circles will be added dynamically here -->
                            <View
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#EDABAD"
                                android:layout_marginEnd="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Curated Wedding Themes Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sansita2"
                android:text="Curated Wedding Themes"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/curatedThemesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Alternatively, we can use static cards for the curated themes -->
            <!-- Curated Theme 1: Rustic Elegance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/rusticThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contentDescription="Rustic Theme Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rustic" />

                    <TextView
                        android:text="Rustic Elegance"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:text="A beautiful blend of natural elements with elegant touches. Features wooden details, burlap accents, and soft floral arrangements."
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <!-- Color Palette Display -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Palette"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        <!-- Color circles for Rustic theme -->
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#8D6E63"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#A1887F"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#D7CCC8"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#EFEBE9"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#5D4037"
                            android:layout_marginEnd="8dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/useRusticThemeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use This Theme"
                        android:layout_gravity="end"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#EDABAD"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Curated Theme 2: Romantic Garden -->
            <androidx.cardview.widget.CardView
                android:id="@+id/gardenThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contentDescription="Garden Theme Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/garden" />

                    <TextView
                        android:text="Romantic Garden"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:text="An enchanting garden-inspired theme with lush greenery, delicate flowers, and soft pastel hues. Perfect for outdoor or spring weddings."
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <!-- Color Palette Display -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Palette"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        <!-- Color circles for Garden theme -->
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#AED581"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#F8BBD0"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#C5E1A5"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#F48FB1"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#81C784"
                            android:layout_marginEnd="8dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/useGardenThemeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use This Theme"
                        android:layout_gravity="end"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#EDABAD"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Curated Theme 3: Elegant Glam -->
            <androidx.cardview.widget.CardView
                android:id="@+id/glamThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contentDescription="Glam Theme Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/elegant" />

                    <TextView
                        android:text="Elegant Glam"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:text="A luxurious and glamorous theme featuring metallic accents, crystal details, and rich colors. Perfect for evening celebrations and formal venues."
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <!-- Color Palette Display -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Palette"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        <!-- Color circles for Glam theme -->
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#9E9E9E"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#CFD8DC"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#FFC107"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#757575"
                            android:layout_marginEnd="8dp" />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#E0E0E0"
                            android:layout_marginEnd="8dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/useGlamThemeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use This Theme"
                        android:layout_gravity="end"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#EDABAD"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>