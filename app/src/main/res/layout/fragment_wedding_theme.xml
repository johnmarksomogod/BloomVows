<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Cardview for Customize Wedding Theme -->
    <androidx.cardview.widget.CardView
        android:id="@+id/customizeWeddingThemeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@drawable/pink_input_border"
        android:layout_marginTop="20dp"
        android:onClick="showCustomizationDialog">

        <!-- Use ConstraintLayout for better control of positioning -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_input_border"
            android:padding="16dp">

            <!-- Back Button (Start) -->
            <ImageView
                android:id="@+id/WeddingThemeBackbttn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/back_icon"
                android:contentDescription="Back Button"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Customize Wedding Theme Text (Center) -->
            <TextView
                android:text="Customize Wedding Theme "
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/carattere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/WeddingThemeBackbttn"
                app:layout_constraintEnd_toStartOf="@id/Customizebttn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"/>

            <!-- Customize Button (End) -->
            <ImageView
                android:id="@+id/Customizebttn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plus1"
                android:contentDescription="Customize Button"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/WeddingThemescrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Output for Customized Wedding Theme (will be above the ScrollView) -->
            <LinearLayout
                android:id="@+id/customizedWeddingThemeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sansita2"
                    android:text="My Wedding Theme"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <!-- Custom Wedding Theme Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/customWeddingThemeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:background="@drawable/pink_input_border"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/pink_input_border"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/customizedThemeImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="16dp"
                            android:contentDescription="Customized Wedding Theme Image"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/customizedThemeName"
                            android:text="Customized Wedding Theme Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/customizedThemeDescription"
                            android:text="This is a custom description of the wedding theme."
                            android:textSize="14sp"
                            android:textColor="#555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"/>

                        <!-- Color Palette Display -->
                        <LinearLayout
                            android:id="@+id/customizedThemeColorPalette"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="Color Pallte"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"/>

                            <!-- Color circles will be added dynamically -->
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ScrollView to display curated wedding themes -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sansita2"
                android:text="Top Wedding Theme"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- Curated Wedding Theme Items (CardView for each theme) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:background="@drawable/pink_input_border"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pink_input_border"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/todopic" />

                    <TextView
                        android:text="Rustic Wedding Theme"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:text="A rustic wedding theme is all about connecting your celebration to nature."
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
