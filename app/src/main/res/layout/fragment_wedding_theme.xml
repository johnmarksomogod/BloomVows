<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FAF2F3"
    android:padding="16dp">

    <!-- Top Section with Back Button, Title, and Floating Add Event Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/WeddingThemeBackbttn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/back_icon"
            android:contentDescription="Back Button" />

        <!-- Timeline Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/carattere"
            android:text="Wedding Theme "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <!-- Floating Button to Add an Event -->
        <LinearLayout
            android:id="@+id/Customizebttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="20dp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Add Event Icon"
                android:src="@drawable/plus1" />
        </LinearLayout>

        <!-- Separator Line Below the Title -->
        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="130dp"
            android:background="#EDABAD"
            android:foregroundGravity="center" />

    </RelativeLayout>

    <!-- ScrollView for Wedding Theme Content -->
    <ScrollView
        android:id="@+id/WeddingThemescrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Output for Customized Wedding Theme -->
            <LinearLayout
                android:id="@+id/customizedWeddingThemeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sansita2"
                    android:text="My Wedding Theme"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <!-- Custom Wedding Theme Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/customizeWeddingThemeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:background="@drawable/pink_input_border"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/pink_input_border"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/customizedThemeImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="16dp"
                            android:contentDescription="Customized Wedding Theme Image"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/customizedThemeName"
                            android:text="Customized Wedding Theme Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/customizedThemeDescription"
                            android:text="This is a custom description of the wedding theme."
                            android:textSize="14sp"
                            android:textColor="#555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"/>

                        <!-- Color Palette Display -->
                        <LinearLayout
                            android:id="@+id/customizedThemeColorPalette"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="Color Palette"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"/>

                            <!-- Color circles will be added dynamically -->
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ScrollView to display curated wedding themes -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sansita2"
                android:text="Top Wedding Theme"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- Curated Wedding Theme Items (CardView for each theme) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:background="@drawable/pink_input_border"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pink_input_border"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/todopic" />

                    <TextView
                        android:text="Rustic Wedding Theme"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:text="A rustic wedding theme is all about connecting your celebration to nature."
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
